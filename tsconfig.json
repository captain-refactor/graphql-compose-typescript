{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "inlineSources": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "esnext"
    ],
    "declaration": true,
    "outDir": "dist",
    "types": [
      "./node_modules/reflect-metadata",
      "./node_modules/@types/node"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
